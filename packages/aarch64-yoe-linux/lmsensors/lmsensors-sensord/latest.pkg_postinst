#!/bin/sh
set -e
if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl daemon-reload
		systemctl preset "sensord.service lm_sensors.service fancontrol.service"

		if [ "disable" = "enable" ]; then
			systemctl --no-block restart "sensord.service lm_sensors.service fancontrol.service"
		fi
	fi
fi
