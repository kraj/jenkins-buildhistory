#!/bin/sh
set -e
if [ -n "$D" -o ! -d /run/systemd/system ] && [ -z "$D" -a -x "/etc/init.d/minicoredumper" ]; then
	/etc/init.d/minicoredumper stop || :
fi
if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop minicoredumper.service

		systemctl disable minicoredumper.service
	fi
fi
