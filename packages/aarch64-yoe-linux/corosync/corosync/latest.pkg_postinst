#!/bin/sh
set -e
if [ -n "$D" ]; then
	exit 0
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl daemon-reload
	systemctl preset corosync.service corosync-notifyd.service corosync-qdevice.service corosync-qnetd.service

	if [ "disable" = "enable" ]; then
		systemctl --no-block restart corosync.service corosync-notifyd.service corosync-qdevice.service corosync-qnetd.service
	fi
fi
if [ x"$D" = "x" ]; then
	if [ -x /sbin/ldconfig ]; then /sbin/ldconfig ; fi
fi
