#!/bin/sh
set -e
if [ -n "$D" ]; then
	exit 0
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl daemon-reload
	systemctl preset lvm2-monitor.service dm-event.socket dm-event.service blk-availability.service

	if [ "disable" = "enable" ]; then
		systemctl --no-block restart lvm2-monitor.service dm-event.socket dm-event.service blk-availability.service
	fi
fi
if [ x"$D" = "x" ]; then
	if [ -x /sbin/ldconfig ]; then /sbin/ldconfig ; fi
fi
