#!/bin/sh
set -e
if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop freediameter.service

		systemctl disable freediameter.service
	fi
fi
if [ -n "$D" -o ! -d /run/systemd/system ] && [ -z "$D" -a -x "/etc/init.d/freediameter" ]; then
	/etc/init.d/freediameter stop || :
fi
