#!/bin/sh
set -e
if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl daemon-reload
		systemctl preset "tinyproxy.service"

		if [ "enable" = "enable" ]; then
			systemctl --no-block restart "tinyproxy.service"
		fi
	fi
fi
