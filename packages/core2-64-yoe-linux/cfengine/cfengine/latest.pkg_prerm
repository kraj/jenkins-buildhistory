#!/bin/sh
set -e
if [ -n "$D" ]; then
	exit 0
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl stop cfengine3.service cf-apache.service cf-hub.service cf-postgres.service cf-runalerts.service cf-execd.service cf-monitord.service cf-serverd.service

	systemctl $OPTS disable cfengine3.service cf-apache.service cf-hub.service cf-postgres.service cf-runalerts.service cf-execd.service cf-monitord.service cf-serverd.service
fi
