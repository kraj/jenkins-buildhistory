#!/bin/sh
set -e
if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop wd_keepalive.service

		systemctl disable wd_keepalive.service
	fi
fi
if [ -n "$D" -o ! -d /run/systemd/system ] && [ -z "$D" -a -x "/etc/init.d/wd_keepalive" ]; then
	/etc/init.d/wd_keepalive stop || :
fi
