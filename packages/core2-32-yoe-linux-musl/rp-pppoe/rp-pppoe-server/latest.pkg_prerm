#!/bin/sh
set -e
if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop pppoe-server.service

		systemctl disable pppoe-server.service
	fi
fi
if [ -n "$D" -o ! -d /run/systemd/system ] && [ -z "$D" -a -x "/etc/init.d/pppoe-server" ]; then
	/etc/init.d/pppoe-server stop || :
fi
