#!/bin/sh
set -e
if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop avahi-dnsconfd.service

		systemctl disable avahi-dnsconfd.service
	fi
fi
if [ -n "$D" -o ! -d /run/systemd/system ] && [ -z "$D" -a -x "/etc/init.d/avahi-dnsconfd" ]; then
	/etc/init.d/avahi-dnsconfd stop || :
fi
