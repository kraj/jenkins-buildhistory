#!/bin/sh
set -e
if [ -n "$D" -o ! -d /run/systemd/system ] && type update-rc.d >/dev/null 2>/dev/null; then
	if [ -n "$D" ]; then
		OPT="-r $D"
	else
		OPT="-s"
	fi
	update-rc.d $OPT openvpn start 10 2 3 4 5 . stop 70 0 1 6 .
fi
if type systemctl >/dev/null 2>/dev/null; then
	OPTS=""

	if [ -n "$D" ]; then
		OPTS="--root=$D"
	fi

	if [ "disable" = "enable" ]; then
		for service in openvpn@loopback-server.service openvpn@loopback-client.service; do
			case "${service}" in
			*@*)
				systemctl ${OPTS} enable "${service}"
				;;
			esac
		done
	fi

	if [ -z "$D" ]; then
		systemctl daemon-reload
		systemctl preset openvpn@loopback-server.service openvpn@loopback-client.service

		if [ "disable" = "enable" ]; then
			systemctl --no-block restart openvpn@loopback-server.service openvpn@loopback-client.service
		fi
	fi
fi
