#!/bin/sh
set -e
if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop triggerhappy.service triggerhappy.socket

		systemctl disable triggerhappy.service triggerhappy.socket
	fi
fi
if [ -n "$D" -o ! -d /run/systemd/system ] && [ -z "$D" -a -x "/etc/init.d/triggerhappy" ]; then
	/etc/init.d/triggerhappy stop || :
fi
