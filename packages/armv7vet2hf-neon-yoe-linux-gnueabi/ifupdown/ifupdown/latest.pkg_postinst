#!/bin/sh
set -e
	update-alternatives --install /sbin/ifup ifup /sbin/ifup.ifupdown 100
	update-alternatives --install /sbin/ifdown ifdown /sbin/ifdown.ifupdown 100

if [ -n "$D" ]; then
    $INTERCEPT_DIR/postinst_intercept delay_to_first_boot ifupdown mlprefix=
    exit 0
fi
    if [ ! -f /etc/network/interfaces ]; then
        mkdir -p /etc/network
        touch /etc/network/interfaces
    fi
